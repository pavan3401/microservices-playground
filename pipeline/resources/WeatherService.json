{
  "family": "%FAMILY_NAME%",
  "volumes": [
    {
      "host": {
        "sourcePath": "/var/log"
      },
      "name": "ecs_instance_logs"
    }
  ],
  "containerDefinitions": [
    {
      "environment": [
        {
          "name": "EUREKA_INSTANCE_HOSTNAME",
          "value": "${local-ipv4:N/A}"
        },
        {
          "name": "SPRING_CLOUD_CONFIG_DISCOVERY_SERVICEID",
          "value": "config-server"
        },
        {
          "name": "SPRING_CLOUD_CONFIG_DISCOVERY_ENABLED",
          "value": "true"
        },
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "syslog"
        },
        {
          "name": "EUREKA_CLIENT_SERVICEURL_DEFAULTZONE",
          "value": "%ELB%"
        }
      ],
      "name": "service",
      "links": [
        "logs"
      ],
      "mountPoints": [],
      "image": "%IMAGE_VERSION%",
      "essential": true,
      "portMappings": [
        {
          "protocol": "tcp",
          "containerPort": 8081,
          "hostPort": 8081
        }
      ],
      "entryPoint": [],
      "memory": 1024,
      "command": [],
      "cpu": 0,
      "volumesFrom": []
    },
    {
      "environment": [],
      "name": "logs",
      "links": [],
      "mountPoints": [
        {
          "sourceVolume": "ecs_instance_logs",
          "containerPath": "/mnt/ecs_instance_logs"
        }
      ],
      "image": "496809802716.dkr.ecr.us-east-1.amazonaws.com/microservices/ecs-cloudwatch-logs:latest",
      "essential": true,
      "portMappings": [],
      "entryPoint": [],
      "memory": 64,
      "command": [],
      "cpu": 0,
      "volumesFrom": []
    }
  ]
}
